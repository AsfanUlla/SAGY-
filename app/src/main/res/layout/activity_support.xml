<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideOverlay"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="?homeAsUpIndicator"
            >


    </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/text_care"
            android:layout_below="@id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We care because you matter!"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/md_white_1000"/>
        <TextView
            android:id="@+id/save_time"
            android:layout_below="@id/text_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send ypur complaints and realx"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/md_white_1000"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/subject_p"
            android:layout_below="@id/save_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:hint="Subject"
            android:padding="20dp"
            android:textColor="#4c4c4c"
            android:background="@drawable/edit_text"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/describe"
            android:layout_below="@id/subject_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:hint="Describe"
            android:maxLines="5"
            android:padding="20dp"
            android:textColor="#4c4c4c"
            android:background="@drawable/edit_text"
            />
        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/describe">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:hint="Upload a Photo"
                android:padding="20dp"
                android:textColor="#4c4c4c"
                android:background="@drawable/edit_text"
                />
            <ImageView
                android:id="@+id/edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:layout_marginRight="20dp"
                />

        </FrameLayout>
        <Button
            android:layout_below="@+id/frame1"
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Submit"
            android:background="@color/colorPrimary"
            android:textColor="@color/md_white_1000"
            android:clickable="true"
            android:focusable="true"/>


    </RelativeLayout>

</ScrollView>